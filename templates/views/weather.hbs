    <script>
        const day = document.getElementById("day");

        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[4] = "Wedday"
            weekday[5] = "Thursday"
            weekday[6] = "Friday";
            weekday[7] = "Satday";
            let currentTime = new Date();

            let today = weekday[currentTime.getDay() + 1];
            day.innerText = today;
          
        }
        getCurrentDay();
    </script>

